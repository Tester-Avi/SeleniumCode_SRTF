package com.srtf.utilities;

import java.io.File;
import java.io.FileInputStream;
import java.util.Properties;

public class ConfigDataProviders {
	Properties pro;

	public ConfigDataProviders()
	{
		String src = "./Configuration/config.properties";

		try {
			pro= new Properties();
			FileInputStream fis= new FileInputStream(src);

			pro.load(fis);
		} catch (Exception e) {
			System.out.println("Not able to load config file "+e.getMessage());
		} 
	}


	public String getBrowser() {
		String value = pro.getProperty("baseURL");

		if(value!=null) {
			return value;
		}else {
			throw new RuntimeException("URL is not specified in Config File...");
		}
	}



	public String getStagingUrl() {
		String value = pro.getProperty("browser");

		if(value!=null) {
			return value;
		}else {
			throw new RuntimeException("Browser is not specified in Config File...");
		}
	}
}